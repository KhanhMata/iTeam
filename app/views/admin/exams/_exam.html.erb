<div class="col-md-8 col-md-offset-1">
  <div class="title">
    <%= render "shared/exam_status_label", status: @exam.status %>
    <%= t "exams.exam_date" %>
    <%= tag(:br) %>
    <center><b><h2><%= @exam.subject.name %></h2></b></center>
    <% if current_user.admin? && (@exam.uncheck? || @exam.checked?) %>
      <%= tag(:hr) %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <%= t ".result" %>
        </div>
        <div class="panel-body">
          <%= link_to t(".check_button"), admin_exam_path(@exam),
            class: "btn btn-danger pull-right" %>
        </div>
      </div>
    <% end %>
    <%= tag(:hr) %>
    <input type="hidden" name="duration" id="duration" value="0">
  </div>
  <%= render "questions" %>
</div>
